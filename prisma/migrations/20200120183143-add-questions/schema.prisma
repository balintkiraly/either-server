generator photon {
  provider = "photonjs"
}

datasource db {
  provider = "postgresql"
  url = "***"
}

model Question {
  id      String @default(cuid()) @id
  content String
  optionA String
  optionB String
  author  User
}

model User {
  id        String     @default(cuid()) @id
  email     String     @unique
  password  String
  name      String?
  questions Question[]
}
